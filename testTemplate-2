apiVersion: v1
kind: ServiceAccount
metadata:
  name: atl-cert-manager-webhook-vultr
  labels:
    app: cert-manager-webhook-vultr
    chart: cert-manager-webhook-vultr-0.3.1
    release: atl-cert-manager-webhook-vultr
    heritage: Helm
---
# Source: cert-manager-webhook-vultr/templates/rbac.yaml
# Grant cert-manager permission to validate using our apiserver
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: atl-cert-manager-webhook-vultr:domain-solver
  labels:
    app: cert-manager-webhook-vultr
    chart: cert-manager-webhook-vultr-0.3.1
    release: atl-cert-manager-webhook-vultr
    heritage: Helm
rules:
  - apiGroups:
      - acme.vultr.com
    resources:
      - '*'
    verbs:
      - 'create'
---
# Source: cert-manager-webhook-vultr/templates/rbac.yaml
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: atl-cert-manager-webhook-vultr:flowcontrol-solver
  labels:
    app: cert-manager-webhook-vultr
    chart: cert-manager-webhook-vultr-0.3.1
    release: atl-cert-manager-webhook-vultr
    heritage: Helm
rules:
  - apiGroups:
      - "flowcontrol.apiserver.k8s.io"
    resources:
      - 'prioritylevelconfigurations'
      - 'flowschemas'
    verbs:
      - 'list'
      - 'watch'
---
# Source: cert-manager-webhook-vultr/templates/rbac.yaml
# apiserver gets the auth-delegator role to delegate auth decisions to
# the core apiserver
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: atl-cert-manager-webhook-vultr:auth-delegator
  labels:
    app: cert-manager-webhook-vultr
    chart: cert-manager-webhook-vultr-0.3.1
    release: atl-cert-manager-webhook-vultr
    heritage: Helm
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: system:auth-delegator
subjects:
  - apiGroup: ""
    kind: ServiceAccount
    name: atl-cert-manager-webhook-vultr
    namespace: cert-manager
---
